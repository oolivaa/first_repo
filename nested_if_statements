# simple if/else statement
if age >= 18:
  print('You are old enough to apply for a loan.')
else:
  print('You are too young to apply for a loan.')

# adding another if/else statement nested inside the outer if statement
if age >= 18:
  if income >= 20000:
    print('You are eligible for a loan.')
  else:
    print('Your income is too low to be eligible for a loan.')
else:
  print('You are too young to apply for a loan.')

# answer by chatgpt
# Create a rating variable and set it equal to a decimal number
rating = 4.3
# Rating system using if / elif / else
if rating > 4.5:
    print("Extraordinary")
elif rating > 4:
    print("Excellent")
elif rating > 3:
    print("Good")
elif rating > 2:
    print("Fair")
else:
    print("Poor")

# Exercises
grade = int(input('Enter your grade level: '))
#Create a four-year high school grade system using if/elif/else statement
if grade == 9:
  print("Freshman")
elif grade == 10:
  print("Sophomore")
elif grade == 11:
  print("Junior")
elif grade == 12:
  print("Senior")
else: 
  print("TBD")
# Exercise
import random

# Create a random number from 0 to 5
num = random.randint(0, 5)

# Print a Snapple fact based on the number
if num == 0:
    print("Flamingos turn pink from eating shrimp.")
elif num == 1:
    print("The only food that doesn't spoil is honey.")
elif num == 2:
    print("Shrimp can only swim backwards.")
elif num == 3:
    print("A taste bud's life span is about 10 days.")
elif num == 4:
    print("It is impossible to sneeze while sleeping.")
else:
    print("It is illegal to sing off-key in North Carolina.")

# Earth weight
# Ask the user for their Earth weight
earth_weight = float(input("Enter your weight on Earth: "))

# Ask the user for a planet number
planet = int(input("Enter a planet number (1-7): "))

# Calculate weight based on the selected planet
if planet == 1:
    new_weight = earth_weight * 0.38
    print("Your weight on Mercury is:", new_weight)
elif planet == 2:
    new_weight = earth_weight * 0.91
    print("Your weight on Venus is:", new_weight)
elif planet == 3:
    new_weight = earth_weight * 0.38
    print("Your weight on Mars is:", new_weight)
elif planet == 4:
    new_weight = earth_weight * 2.53
    print("Your weight on Jupiter is:", new_weight)
elif planet == 5:
    new_weight = earth_weight * 1.07
    print("Your weight on Saturn is:", new_weight)
elif planet == 6:
    new_weight = earth_weight * 0.89
    print("Your weight on Uranus is:", new_weight)
elif planet == 7:
    new_weight = earth_weight * 1.14
    print("Your weight on Neptune is:", new_weight)
else:
    print("Invalid planet number")
